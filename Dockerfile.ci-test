# Dockerfile for reproducing CI failures locally
FROM ruby:4.0-slim-bookworm

ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && apt-get install -y \
    wget \
    gnupg \
    git \
    xvfb \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Add Mozilla APT repository for Firefox Nightly
RUN install -d -m 0755 /etc/apt/keyrings && \
    wget -q https://packages.mozilla.org/apt/repo-signing-key.gpg -O- | tee /etc/apt/keyrings/packages.mozilla.org.asc > /dev/null && \
    echo "deb [signed-by=/etc/apt/keyrings/packages.mozilla.org.asc] https://packages.mozilla.org/apt mozilla main" | tee /etc/apt/sources.list.d/mozilla.list > /dev/null && \
    echo 'Package: *\nPin: origin packages.mozilla.org\nPin-Priority: 1000' | tee /etc/apt/preferences.d/mozilla

# Install Firefox Nightly
RUN apt-get update && apt-get install -y firefox-nightly && rm -rf /var/lib/apt/lists/*

# Verify installations
RUN ruby --version && firefox-nightly --version

WORKDIR /app

# Copy Gemfile first for caching
COPY Gemfile Gemfile.lock* puppeteer-bidi.gemspec ./
COPY lib/puppeteer/bidi/version.rb ./lib/puppeteer/bidi/

RUN bundle install

# Copy the rest of the application
COPY . .

ENV HEADLESS=true
ENV FIREFOX_PATH=/usr/bin/firefox-nightly
